@model StoreModels.Inventory

@{
    ViewData["Title"] = "Delete";
}

<h1>Remove Inventory Item</h1>

<h3>Are you sure you want to remove this item from the store inventory?</h3>
<div>
    <h4>Inventory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StoreID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StoreID)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Store">Back to Stores</a>
    </form>
</div>
